<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.product.whitewalkers.veniporelyestuyo.PublishProductFragment"
    android:weightSum="1">

    <Space
        android:layout_width="1dp"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/makeProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/makeProduct"
            android:textSize="@dimen/activity_title_text_size"
            android:visibility="visible" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/productNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/productName"
            android:textSize="@dimen/activity_normal_text_size"
            android:visibility="visible" />

        <EditText
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/name" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/productCategoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/category"
            android:textSize="@dimen/activity_normal_text_size"
            android:visibility="visible" />

        <Spinner
            android:id="@+id/productCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/categories_array" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/productStateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/state"
            android:textSize="@dimen/activity_normal_text_size"
            android:visibility="visible" />

        <Spinner
            android:id="@+id/productState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:entries="@array/states_array" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPhoto1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10" />

            <ImageView
                android:id="@+id/imgPhoto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10" />

            <ImageView
                android:id="@+id/imgPhoto3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTakePhoto1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:text="@string/takePhoto1Text"
                tools:text="@string/takePhoto1Text" />

            <Button
                android:id="@+id/btnTakePhoto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:text="@string/takePhoto2Text"
                tools:text="@string/takePhoto2Text" />

            <Button
                android:id="@+id/btnTakePhoto3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:text="@string/takePhoto3Text"
                tools:text="@string/takePhoto3Text" />
        </LinearLayout>
        <Button
            android:id="@+id/btnContinuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:text="@string/continueText"
            tools:text="@string/continueText" />
    </LinearLayout>
</LinearLayout>
