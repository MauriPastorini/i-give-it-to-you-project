<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.product.whitewalkers.veniporelyestuyo.ModerateProductsActivity">

    <TextView
        android:id="@+id/moderateProductsTitle"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="Moderar Productos"
        android:textAlignment="center"
        android:textColor="?android:attr/colorEdgeEffect"
        android:textSize="24sp"
        tools:text="@string/moderateProductsTitle"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/unmoderatedProductsListView"
        android:layout_width="0dp"
        android:layout_height="445dp"
        app:layout_constraintTop_toBottomOf="@+id/moderateProductsTitle"
        android:layout_marginRight="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>
